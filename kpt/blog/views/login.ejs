<!DOCTYPE html>
<html lang="zh-ch" class="login">
	<%- include("./public/head.ejs") %>
	<body>
		<section>
			<form action="/login" method="post">
				<div class="form-group">
					<input type="text" name="name" placeholder="登录名">
				</div>
				<div class="form-group">
					<input type="password" name="password" placeholder="密码" >
					<%if (message) {%>
						<p><%= message%> </p>
						<% } %>
				</div>
				<div class="form-group">
					<input type="submit" value="登录">
					<p style="height: 40px;margin-left: 40px;margin-top:10px;font-size: larger;"><a href="/zc" style="color: white;">还没有账号？点我注册</a></p>
				</div>
			</form>
		</section>
		<%- include("./public/footer.ejs") %>
	</body>
	</html>
  